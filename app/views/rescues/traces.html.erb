<section class="p-6 grid gap-6">
  <% @source_extracts.each do |file, line, code| %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg overflow-hidden">
      <div class="bg-gray-100 px-4 py-2 font-mono text-sm text-gray-700">
        <%= file %> at line <%= line %>
      </div>
      <pre class="source-extract px-4 py-3 font-mono text-sm text-gray-800"><%= code %></pre>
    </div>
  <% end %>

  <h2 class="text-2xl font-bold text-gray-800">Backtrace</h2>
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <% @trace.each do |frame| %>
      <div class="backtrace-frame px-4 py-2 text-sm text-gray-600 font-mono"><%= frame %></div>
    <% end %>
  </div>
</section>
