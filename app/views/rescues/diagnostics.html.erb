<header class="bg-red-50 border-b border-red-200 p-6">
  <h1 class="text-4xl font-extrabold text-red-700 mb-2">
    <%= @exception.class %>
  </h1>
  <p class="text-lg text-red-600"><%= @exception.message %></p>
  <p class="mt-3 text-sm text-gray-600">
    in <strong><%= @controller_name %>#<%= @action_name %></strong>
      at <code class="px-1 bg-gray-200 rounded"><%= @file %>:<%= @line %></code>
  </p>
</header>
